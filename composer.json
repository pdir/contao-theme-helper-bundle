{
  "name": "pdir/contao-theme-helper-bundle",
  "type":"contao-bundle",
  "description": "pdir theme helper bundle for Contao 5",
  "keywords":["contao","theme","template", "tools", "helper"],
  "homepage": "https://pdir.de",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Webdesign f√ºr Dresden",
      "homepage": "https://pdir.de",
      "email" : "develop@pdir.de",
      "role" : "Developer"
    },
    {
      "name": "Kostenlose Contao Themes",
      "homepage": "https://contao-themes.net",
      "email" : "develop@pdir.de",
      "role" : "Supplier"
    }
  ],
  "support" : {
    "email" : "develop@pdir.de",
    "issues" : "https://github.com/pdir/contao-theme-helper-bundle/issues",
    "source" : "https://github.com/pdir/contao-theme-helper-bundle"
  },
  "require": {
    "php": "^8.1",
    "contao/core-bundle": "^5.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.5",
    "contao/manager-plugin": "^2.0",
    "contao/easy-coding-standard": "^3.0",
    "phpunit/phpunit": "^7.1 || ^8.4 || ^9.5",
    "symfony/phpunit-bridge": "^4.4 || ^5.1",
    "phpstan/phpstan": "^1.8",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-symfony": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Pdir\\ThemeHelperBundle\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Pdir\\ThemeHelperBundle\\ContaoManager\\Plugin"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/user?u=28241718"
    },
    {
      "type": "corporate",
      "url": "https://contao-themes.net/sponsoring.html"
    }
  ],
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "contao/manager-plugin": true
    }
  }
}
